{
  "name": "locallyjs",
  "description": "Locally is a localStorage manager that supports expirable values with TTL and saves space by compressing them using LZW algorithm.",
  "version": "1.0.0",
  "main": "./dist/locally.js",
  "module": "./dist/locally.mjs",
  "types": "./dist/locally.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/locally.d.mts",
        "default": "./dist/locally.mjs"
      },
      "require": {
        "types": "./dist/locally.d.ts",
        "default": "./dist/locally.js"
      }
    },
    "./light": {
      "import": {
        "types": "./dist/light.d.mts",
        "default": "./dist/light.mjs"
      },
      "require": {
        "types": "./dist/light.d.ts",
        "default": "./dist/light.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "author": "Ozan Tunca <ozan@ozantunca.org> (http://www.ozantunca.org/)",
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.0",
    "@semantic-release/git": "^10.0.0",
    "@types/chai": "^5.2.3",
    "@types/mocha": "^10.0.0",
    "@types/ms": "^2.1.0",
    "@types/node": "^20.0.0",
    "@types/optimist": "^0.0.33",
    "chai": "^2.1.2",
    "mocha": "*",
    "node-localstorage": "^0.5.0",
    "optimist": "^0.6.1",
    "semantic-release": "^24.2.9",
    "ts-node": "^10.9.0",
    "tsup": "^8.5.1",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "lz-string": "^1.4.4",
    "ms": "^0.7.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ozantunca/locally.git"
  },
  "bugs": {
    "url": "https://github.com/ozantunca/locally/issues"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/ozantunca/locally/raw/master/LICENSE"
    }
  ],
  "scripts": {
    "build": "tsup",
    "build:browsertest": "tsc -p tsconfig.browser-test.json",
    "pretest": "npm run build && npm run build:browsertest",
    "test": "mocha --require ts-node/register test/node-mocha.ts --exit && mocha --require ts-node/register test/node-mocha.ts --mode=dist --exit && mocha --require ts-node/register test/node-mocha.ts --mode=light --exit",
    "simpletest": "mocha --require ts-node/register test/node-mocha.ts --exit",
    "lighttest": "mocha --require ts-node/register test/node-mocha.ts --mode=light --exit",
    "preversion": "npm test",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "readmeFilename": "README.md",
  "homepage": "https://github.com/ozantunca/locally"
}
